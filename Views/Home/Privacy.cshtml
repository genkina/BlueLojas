@model IEnumerable<blueLojas.Models.UsuarioModel>
@{
    ViewData["Title"] = "Usuario";
    ViewBag.title = "usuario";
}


<h4>Usuario</h4>
<p>
    @Html.ActionLink("Criar Usuário", "AdicionaUsuario")
</p>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Usuario">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <table>
                    <tr>
                        <td>
                        </td>

                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.nome)</td>
                            <td>@Html.DisplayFor(modelItem => item.telefone)</td>
                            <td>@Html.DisplayFor(modelItem => item.email)</td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Deletar", "DeletaUsuario", new { id = item.email })
                            </td>
                        </tr>
                    }
                </table>
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>